@model SalesWebMvc.Models.Seller;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="input-group mb-3">
                <label asp-for="Name" class="input-group-text" id="inputGroup-sizing-default"></label>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="input-group mb-3">
                <label asp-for="Email" class="input-group-text" id="inputGroup-sizing-default"></label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="input-group mb-3">
                <label asp-for="BirthDate" class="input-group-text" id="inputGroup-sizing-default"></label>
                <input asp-for="BirthDate" class="form-control" type="date">
            </div>
            <div class="input-group mb-3">
                <label asp-for="BaseSalary" class="input-group-text" id="inputGroup-sizing-default"></label>
                <input asp-for="BaseSalary" class="form-control">
            </div>
            <div class="input-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>