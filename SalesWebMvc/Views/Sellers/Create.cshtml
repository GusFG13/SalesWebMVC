@model SalesWebMvc.Models.ViewModels.SellerFormViewModel;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="alert-danger"></div>
            <div class="input-group mb-3">
                <label asp-for="Seller.Name" class="input-group-text" id="inputGroup-sizing-default"></label>
                <input asp-for="Seller.Name" class="form-control">
                <span asp-validation-for="Seller.Name" class="alert-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Seller.Email" class="input-group-text" id="inputGroup-sizing-default"></label>
                <input asp-for="Seller.Email" class="form-control">
                <span asp-validation-for="Seller.Email" class="alert-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Seller.BirthDate" class="input-group-text" id="inputGroup-sizing-default"></label>
                <input asp-for="Seller.BirthDate" class="form-control" type="date">
                <span asp-validation-for="Seller.BirthDate" class="alert-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Seller.BaseSalary" class="input-group-text" id="inputGroup-sizing-default"></label>
                <input asp-for="Seller.BaseSalary" class="form-control">
                <span asp-validation-for="Seller.BaseSalary" class="alert-danger"></span>
            </div>
            <div class="input-group">
                <label asp-for="Seller.DepartmentId" class="input-group-text" id="inputGroup-sizing-default"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id","Name"))" class="form-control"></select>
            </div>
            <div class="input-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
            }

